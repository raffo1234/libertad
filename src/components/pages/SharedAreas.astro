---
import { Image } from "astro:assets";
import interior1 from "../../assets/interior-1.jpg";
import interior2 from "../../assets/interior-2.jpg";
import interior3 from "../../assets/interior-3.jpg";
import Dialog from "../Dialog";
import BoxSubtitle from "../BoxSubtitle.astro";
---

<section class="mb-[70px]">
  <h2 class="text-xl text-center mb-8"><b>Áreas comunes</b></h2>
  <div class="flex justify-center w-full mb-11">
    <div class="bg-[#E0DDD8] rounded-[19px] p-2 flex space-x-2 text-sm">
      <button class="bg-[#EAE8E4] rounded-[15px] font-bold py-3 px-3 sm:px-8"
        >Gymnasio</button
      >
      <button class="text-[#807357] font-bold py-3 px-3 sm:px-8">Terraza</button
      >
      <button class="text-[#807357] font-bold py-3 px-3 sm:px-8"
        >Reuniones SUM</button
      >
    </div>
  </div>
  <div class="flex space-x-2 -ml-2 lg:ml-0">
    <article
      class="hidden lg:w-1/4 lg:block rounded-[50px] h-[332px] overflow-hidden"
    >
      <Image
        src={interior1}
        alt="Libertad"
        class="object-cover w-full h-full object-top"
      />
    </article>
    <article
      class="hidden md:w-1/3 lg:w-1/4 md:block rounded-[50px] h-[332px] overflow-hidden"
    >
      <Image
        src={interior2}
        alt="Libertad"
        class="object-cover w-full h-full object-top"
      />
    </article>
    <article
      class="w-1/2 lg:w-1/4 md:w-1/3 rounded-[50px] h-[332px] overflow-hidden"
    >
      <Image
        src={interior3}
        alt="Libertad"
        class="object-cover w-full h-full object-top"
      />
    </article>
    <article class="w-1/2 md:w-1/3 lg:w-1/4">
      <BoxSubtitle subtitle="Espacios que Conectan"
        >Diseñadas para inspirar, relajar y crear momentos inolvidables.
        <Dialog client:load />
      </BoxSubtitle>
    </article>
  </div>
</section>
